{
  "name": "npm-autoinstaller",
  "version": "1.2.6",
  "description": "automatically installs missing npm packages or updates them when you checkout another branch with git or perform a merge/rebase",
  "repository": "cyrilwanner/npm-autoinstaller",
  "engines": {
    "node": ">= 4.0"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "babel src --out-dir dist --copy-files",
    "install": "node ./install",
    "watch": "npm run build -- --watch",
    "test": "npm run build && mocha --compilers js:babel-register --recursive"
  },
  "keywords": [
    "npm",
    "install",
    "installer",
    "autoinstall",
    "autoinstaller",
    "git",
    "hooks"
  ],
  "author": "Cyril Wanner <info@cyr.li>",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.24.0",
    "babel-preset-es2015": "^6.24.0",
    "babel-register": "^6.24.0",
    "chai": "^4.1.1",
    "chai-spies-next": "^0.9.3",
    "mocha": "^3.2.0",
    "mock-fs": "^4.4.1",
    "proxyquire": "^1.7.11",
    "rimraf": "^2.6.1"
  },
  "dependencies": {
    "colors": "^1.1.2",
    "deepmerge": "^1.3.1",
    "readline-sync": "^1.4.7"
  }
}
